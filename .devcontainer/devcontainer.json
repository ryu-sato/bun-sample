// https://github.com/alertbox/devcontainers-try-bun/
{
    "name": "Bun (Bullseye)",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceMount": "src=${localWorkspaceFolder},dst=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        3000
    ],
    "features": {
        "common": {
            "username": "automatic",
            "uid": "automatic",
            "gid": "automatic",
            "upgradePackages": true
        },
        "git": "latest",
        "github-cli": "latest"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.insertSpaces": true,
                "editor.tabSize": 2,
                "files.eol": "\n", // 既定の改行文字。LF の場合には \n を CRLF の場合には \r\n を使用してください。
                "files.encoding": "utf8",
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true,
                // 指定した構文に対してプロファイルを定義するか、特定の規則がある独自のプロファイルをご使用ください。
                "emmet.syntaxProfiles": {
                    "javascript": "jsx"
                },
                "[markdown]": {
                    "files.insertFinalNewline": false,
                    "files.trimTrailingWhitespace": false
                }
            },
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "mhutchie.git-graph",
                "eamodio.gitlens"
            ]
        }
    },
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "",
    // "overrideCommand": false,
    // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "vscode"
}
